.container.signup-box
  .row
    .col.s12.l12
      = simple_form_for @request_act do |f|
        -if @request_act.errors.any?
          #error_explanation
            %h3.chip
              = "#{@request_act.errors.count} errores encontrados:"
              <i class="material-icons">close</i>
            %ul
              -@request_act.errors.full_messages.each do |msg|
                %li.chip.waves-effect.waves-light.btn-large
                  =msg
                  <i class="material-icons">close</i>
        .row
          .col.s12.l12
            .section
              .row
                .col.s12.l12
                  .input-field.col.s12.l12
                    =f.text_field :type_act
                    %label{for: "#{:type_act}", class: "active"} Tipo de Acto o Contrato:
                  .input-field.col.s12.l12
                    =f.text_field :date_act
                    %label{for: "#{:date_act}", class: "active"} Fecha de Otorgamiento del Acto o Contrato:
                  .input-field.col.s12.l12
                    =f.text_field :description_act
                    %label{for: "#{:description_act}", class: "active"} Descripción del Acto o Contrato:
                  .input-field.col.s12.l12
                    =f.text_field :amount_act
                    %label{for: "#{:amount_act}", class: "active"} Cuantía del Acto o Contrato:
                  .input-field.col.s12.l12
                    =f.text_field :entity
                    %label{for: "#{:entity}", class: "active"} Notaria/Juzgado/Entidad:
                  .input-field.col.s12.l12
                    =f.text_field :city_entity
                    %label{for: "#{:city_entity}", class: "active"} Cantón de Notaria/Juzgado/Entidad:
              .row
                .col.s12.l6
                  %button{class:"btn btn-fb", type:"submit", name:"action"}
                    Guardar<i class="material-icons right">send</i>
                .col.s12.l6
                  =link_to "Cancelar", root_path, class: "btn btn-fb"